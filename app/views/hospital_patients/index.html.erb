
<h1><%= @hospital.name %> Patients</h1>
<%= link_to "Sort Patients Alphabetically", "/hospitals/#{@hospital.id}/patients?sorted=true" %>
<br>
<br>
<% @patients.each do |patient| %>
<%= link_to "Go to Patient", "patients/#{patient.id}" %>
<%= link_to "Edit Patient Data", "/patients/#{patient.id}/edit" %>
<%= button_to "Delete #{patient.name}", "/patients/#{patient.id}", method: :delete %>
<table>
<% patient.attributes.each_pair do |key, value|%>
<tr>
<td style="color:blue"><%= key %>: </td>
<td><%= value %></td>
</tr>
<% end %>
<br>
</table>
<br>
<% end %>
<br>

<form action="/hospitals/<%= @hospital.id%>/patients" method="get">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="threshold">Only return records with patients older than:</label>
  <input type="integer" id="threshold" name="threshold">
  <input type="submit" id="submit" name="submit">
</form>

<%= link_to "Create New Patient", "/hospitals/#{@hospital.id}/patients/new"  %>
